<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.swiss_army_app.LandingPageController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="15" layoutX="150" layoutY="100">
        <Label text="Swiss Army App" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <TextField fx:id="nicknameField" promptText="Enter nickname..." prefWidth="200" />
        <Button text="Get Started" onAction="#handleGetStarted" />
    </VBox>
</AnchorPane>
