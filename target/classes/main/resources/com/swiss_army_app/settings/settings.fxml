    <fx:include source="../sidebar/sidebar.fxml" />

    <VBox alignment="CENTER" layoutX="216.0" layoutY="61.0" spacing="15.0">
        <Label fx:id="nicknameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Hello!" />

        <CheckBox fx:id="darkModeBox" text="Enable Dark Mode" />
        <CheckBox fx:id="soundBox" text="Enable Sound" />
        <CheckBox fx:id="notifBox" text="Enable Notifications" />
        <CheckBox fx:id="autoLoginBox" text="Enable Auto-Login" />
        <CheckBox fx:id="tooltipBox" text="Show Tooltips" />

        <Button onAction="#handleSave" prefWidth="200.0" text="Save Settings" />
    </VBox>

</AnchorPane>
