<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.swiss_army_app.settings.SettingsController" stylesheets="@../style.css">
    <fx:include source="../sidebar/sidebar.fxml" />

    <VBox styleClass="white-card" prefWidth="400" prefHeight="400"
          AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200"
          AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100"
          spacing="20" alignment="CENTER">

        <Label text="SETTINGS" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <VBox spacing="10" alignment="CENTER">
            <CheckBox fx:id="darkModeBox" text="Light Mode" />
            <CheckBox fx:id="soundBox" text="Sound Effects" />
            <CheckBox fx:id="notifBox" text="Notifications" />
            <CheckBox fx:id="autoLoginBox" text="Auto Login" />
            <CheckBox fx:id="tooltipBox" text="Show Tooltips" />
        </VBox>

        <Button fx:id="saveButton" text="Save" onAction="#handleSave" styleClass="red-button" />
        <Button fx:id="backButton" text="Back to Home" onAction="#handleBack" styleClass="gray-button" />

    </VBox>

</AnchorPane>